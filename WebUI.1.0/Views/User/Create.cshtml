@model WebUI._1._0.Models.CreateModel
@{
    ViewBag.Title = "Create";
}
<h2>Create User</h2>
<hr />
@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.LabelFor(m => m.UserName) @Html.TextBoxFor(m => m.UserName)
    <br>
    @Html.LabelFor(m => m.FullName) @Html.TextBoxFor(m => m.FullName)
    <br>
    @Html.LabelFor(m => m.Password) @Html.PasswordFor(m => m.Password)
    <br>
    @Html.LabelFor(m => m.AddressLine) @Html.TextAreaFor(m => m.AddressLine)
    <br>
    @Html.LabelFor(m => m.Country) @Html.TextBoxFor(m => m.Country)
    <br>
    <input class="btn" type="submit" value="Save" />
}

